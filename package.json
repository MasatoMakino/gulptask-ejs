{
  "name": "@masatomakino/gulptask-ejs",
  "version": "0.3.3",
  "description": "ejs compiler task for gulp.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./bin/index.d.ts",
      "default": "./bin/index.js"
    }
  },
  "types": "./bin/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/gulptask-ejs.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "files": [
    "bin"
  ],
  "bin": {
    "gulptask-ejs": "bin/CLI.js"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "ejs": "^3.1.9",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.3",
    "@types/node": "^20.8.6",
    "@vitest/coverage-istanbul": "^0.34.6",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "test": "vitest",
    "coverage": "vitest --run --coverage",
    "testRun": "node bin/CLI.js --srcDir ./testEjs --distDir ./dist --componentPatterns '**/_*.ejs'",
    "buildEJS": "npx @masatomakino/gulptask-ejs --srcDir ./testEjs --distDir ./dist --componentPatterns '**/_*.ejs'",
    "watchEJS": "npm run buildEJS -- -W",
    "prepare": "husky install"
  },
  "bugs": {
    "url": "https://github.com/MasatoMakino/gulptask-ejs/issues"
  },
  "homepage": "https://github.com/MasatoMakino/gulptask-ejs#readme",
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  }
}
